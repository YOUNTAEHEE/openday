<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
						
<mapper namespace="mapper.oclass">
	
	<!-- 클래스 오픈 요청 -->
	<insert id="classOpen" parameterType="com.kosta.openday.oclass.dto.OclassDTO">
		 <![CDATA[
		     insert into oclass (clsId,clsName,clsCode,clsDescription,fileId,clsCarrer,clsCurri)
		     values( nextval(orderInfo_seq),#{clsName},#{clsCode},#{clsDescription},#{fileId},
		     		#{clsCarrer},#{clsCurri})
	     ]]>
	</insert>
	
	<!-- 승인된 클래스 등록 -->
	<insert id="classEnrollemnt" parameterType="com.kosta.openday.oclass.dto.OclassDTO">
		 <![CDATA[
		     insert into schedule (scdNum,scdDate,scdPrice,scd,scdTime,scdpersonnel,sdcLocDetial)
		     values( nextval(orderInfo_seq),#{scdDate},#{scdPrice},#{scdOperationTime},#{scdTime},
		     		#{scdpersonnel},#{sdcLocDetial})
	     ]]>
	</insert>





