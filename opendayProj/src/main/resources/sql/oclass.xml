<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
						
<mapper namespace="mapper.oclass">
	
	<!-- 클래스 오픈 요청 -->
	<insert id="classOpen" parameterType="com.kosta.openday.user.dto.OClassDTO">
		 <![CDATA[
		     insert into oclass (clsId,clsName,clsCode,clsDescription,clsCurri,clsCareer,clsCreatedAt,filNum)
		     values( nextval(oclass_seq),#{clsName},#{clsCode},#{clsDescription},#{clsCurri},#{clsCareer},
		     		curdate(),#{filNum})
	     ]]>
	</insert>
	
	<!-- 승인된 클래스 등록 -->
	<insert id="classEnrollemnt" parameterType="com.kosta.openday.user.dto.OClassDTO">
		 <![CDATA[
		     insert into schedule (scdNum,scdDate,scdPrice,scdOperationTime,scdTime,scdPersonnel)
		     values( nextval(schedule_seq),#{scdNum},curdate(),#{scdPrice},#{scdOperationTime},#{scdTime},
		     		#{scdPersonnel},#{1})
	     ]]>
	</insert>
	

</mapper>