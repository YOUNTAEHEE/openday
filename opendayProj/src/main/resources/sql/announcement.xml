<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
						
<mapper namespace="mapper.announcement">
	<select id="selectAnnouncement"
		parameterType="Integer"
		resultType="com.kosta.openday.adm.dto.AnnouncementDTO">
		<![CDATA[
		SELECT *
		FROM announcement
		where ancId = #{ancId}
		]]>
	</select>
	
	<select id="selectAnnouncementList"
		resultType="com.kosta.openday.adm.dto.AnnouncementDTO">
		<![CDATA[
		SELECT *
		FROM announcement
		]]>
	</select>
	
	<insert id="insertAnnouncement">
		<![CDATA[
		insert into announcement
		values (announcement_sqe,
		#{ancTitle}, #{ancContent}, #{ancViewcount},
		#{ancType}, #{ancUploadDate}, #{filNum}
		]]>
	</insert>
</mapper>