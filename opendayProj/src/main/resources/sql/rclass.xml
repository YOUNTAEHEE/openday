<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
						
<mapper namespace="mapper.rclass">

	<insert id="insertRequest" parameterType="com.kosta.openday.user.dto.RequestDTO">
		<![CDATA[
			insert into request (reqId,reqTitle,reqLocation,reqContent,reqViews,reqDate,reqUpdateDate,userId)
			values(nextval(request_seq),#{reqTitle},#{reqLocation},#{reqContent},0,curdate(),curdate(),#{userId})
		]]>
	</insert>
	<select id="selectAllRequestCnt" resultType="Integer">
		<![CDATA[
			select count(*) from request
		]]>	
	</select>
	
	<select id="selectRequestList" resultType="com.kosta.openday.user.dto.RequestDTO"  parameterType="Integer">
		<![CDATA[
			select *
			from request  limit #{startRow},10
		]]>	
	</select>
	
	<select id="selectRequest" parameterType="Integer" resultType="com.kosta.openday.user.dto.RequestDTO">
		<![CDATA[
			select  *
			from request
			where reqId=#{reqId}
		]]>	
	</select>
	
	<update id="updateReqViews" parameterType="Integer">
		<![CDATA[
			update request set reqViews=reqViews+1 where reqId=#{reqId}
		]]>	
	</update>
	
	<update id="updateRequest" parameterType="com.kosta.openday.user.dto.RequestDTO">
		<![CDATA[
			update request set reqLocation=#{reqLocation},reqTitle=#{reqTitle},reqContent=#{reqContent}
			where reqId=#{reqId}
		]]>	
	</update>
	
	<delete id="deleteRequest" parameterType="Integer">
		<![CDATA[
			delete from request where reqId=#{reqId}
		]]>	
	</delete>
	
	<select id="selectPartpaCntByReqId" parameterType="Integer" resultType="Integer">
		<![CDATA[
			select count(reqId) from participation
		]]>	
	</select>
	
	<select id="selectPartpaYN" parameterType="java.util.Map" resultType="Integer">
		<![CDATA[
			select count(*) from participation 
			where userId=#{userId} and reqId=#{reqId}
		]]>	
	</select>	
	
	<insert id="insertParticipation" parameterType="java.util.Map">
		<![CDATA[
			insert into participation (userId,reqId) values(#{userId},#{reqId}) 
		]]>	
	</insert>
	
	<delete id="deleteParticipation" parameterType="java.util.Map">
		<![CDATA[
			delete from participation where userId=#{userId} and reqId=#{reqId}
		]]>	
	</delete>
	
	<select id="selectScheduleDetail" parameterType="Integer" resultType="java.util.Map">
		<![CDATA[
			SELECT o.clsId, o.clsName, o.filNum, o.clsDescription, o.clsCurri,
 				round(o.clsPrice*(1-s.scdDiscount/100),0) AS price, s.scdLoc, s.scdPlace
			FROM schedule s JOIN oclass o ON(s.clsId=o.clsId) 	
			WHERE s.scdNum = #{scdNum}
		]]>	
	</select>

	<select id="selectReviewByStdNum" parameterType="Integer" resultType="com.kosta.openday.user.dto.ReviewDTO">
		<![CDATA[
			SELECT * FROM review WHERE scdNum = #{scdNum}
		]]>	
	</select>

	<select id="selectInquiryByStdNum" parameterType="Integer" resultType="com.kosta.openday.user.dto.ClsInquiryDTO">
		<![CDATA[
			SELECT * FROM cls_inquiry WHERE scdNum = #{scdNum}
		]]>	
	</select>
	
	<select id="selectHeartByStdNumAndUser" parameterType="java.util.Map" resultType="Integer">
		<![CDATA[
			SELECT COUNT(*) FROM heart WHERE scdNum=#{scdNum} and userId=#{userId}
		]]>	
	</select>	
	
	<select id="selectHeartCntByStdNum" parameterType="Integer" resultType="Integer">
		<![CDATA[
			SELECT COUNT(*) FROM heart WHERE scdNum=#{scdNum}
		]]>	
	</select>	
	
	<insert id="insertHeartByStdNumAndUser" parameterType="java.util.Map">
		<![CDATA[
			insert into heart (userId, stdNum) values (#{userId}, #{stdNum})
		]]>	
	</insert>
	
	<delete id="deleteHeartByStdNumAndUser" parameterType="java.util.Map">
		<![CDATA[
			delete from heart where userId=#{userId} and stdNum=#{stdNum}
		]]>		
	</delete>
	
	<insert id="selectTeacherChannel" parameterType="String">
		<![CDATA[
			SELECT tchcNum, filNum 
			FROM teacher_channel WHERE userId=#{teacherId} 	
		]]>		
	</insert>
</mapper>